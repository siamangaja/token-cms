		&__title
			font-size 52px
			margin-bottom 15px
		&__content
			&--desk
				display flex
		&__particles
			right calc((100% - 1110px)/2)
	@media (min-width: 1440px)
		&__particles
			right calc((100% - 1230px)/2)
	@media (min-width: 1600px)
		&--ellipse
			&:before
			&:after
				right -30vh
		&__content
			padding-top 60px
	@media (min-width: 1900px)
		&--circle
			&:before
			&:after
				width 140vh
				height 140vh
				right -70vh
				top -40vh
		&--ellipse
			&:before
			&:after
				right -25vh

@keyframes arrow
	0% 
		bottom 0
	75%
		bottom 10px
	100% 
		bottom 0

/*==============================
	Default button
==============================*/
.btn
	position relative
	display flex
	flex-direction row
	justify-content center
	align-items center
	height 56px
	width 100%
	max-width 180px
	font-size 13px
	text-transform uppercase
	background-color $clr1
	font-weight 500
	color $white
	border-radius 30px
	letter-spacing 1px
	overflow hidden
	cursor pointer
	transition .4s ease
	&:hover
		color $white
		background-color $title-clr
	&--white
		background-color $white
		color $clr1
		&:hover
			color $clr1
	&--border
		border 2px solid $clr1
		background-color $white
		color $clr1
		line-height 53px
		&:hover
			background-color $clr1
			color $white
	&--transparent
		background-color rgba($white, .4)
	&--header
		height 44px
		width 110px
		margin-right 45px
	&--shadow
		box-shadow 0 6px 9px 0 rgba($clr1, .6)
		&:hover
			box-shadow 0 6px 9px 0 rgba($title-clr, .5)
	&--center
		margin 0 auto
	&--section
		margin-top 40px
	@media (min-width: 768px)
		&--header
			height 48px
			width 130px
			margin-right 55px
	@media (min-width: 1200px)
		&--header
			margin-right 0
			background-color $white
			color $clr1
		&--section
			margin-top 50px

